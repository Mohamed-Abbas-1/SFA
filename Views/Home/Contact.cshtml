                        <i class="g-font-size-default fa fa-twitter"></i>
                    </a>
                </li>
                <li class="list-inline-item g-mx-4">
                    <a class="u-icon-v1 g-color-gray-dark-v5 g-bg-gray-light-v5 g-color-white--hover g-bg-primary--hover rounded-circle" target="_blank" href="https://www.linkedin.com/company/sfaalliance/">
                        <i class="g-font-size-default fa fa-linkedin"></i>
                    </a>
                </li>
            </ul>
            <!-- End Figure Social Icons -->
        </div>
    </div>
</section>
