<section class="g-bg-gray-light-v5" style="margin-top: 200px;">
    <div class="container g-py-100">
        <div class="row justify-content-center">
            <div class="col-sm-8 col-lg-5">
                <div class="u-shadow-v21 g-bg-white rounded g-py-40 g-px-30">
                    <header class="text-center mb-4">
                        <h2 class="h2 g-color-black g-font-weight-600">Login</h2>
                    </header>

                    <!-- Form -->
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "g-color-gray-dark-v2 g-font-weight-600 g-font-size-13" })
                   
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15", @placeholder = "johndoe@gmail.com" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    


                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "g-color-gray-dark-v2 g-font-weight-600 g-font-size-13" })
                        
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15 mb-3" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "g-color-gray-dark-v2 g-font-weight-600 g-font-size-13" })
                        
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15 mb-3" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                       
                    </div>
                    
                    <div class="form-group">
                        <div class="col-md-offset-2 ">
                            <input type="submit" value="Register" class="btn btn-md btn-block u-btn-primary rounded g-py-15 g-px-15" />
                        </div>
                    </div>


                </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

